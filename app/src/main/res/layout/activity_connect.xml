<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    android:textAlignment="center"
    tools:context=".activity.ConnectActivity">

    <LinearLayout
        android:id="@+id/manhLoading1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.activity.HelloActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="411dp"
            android:layout_height="334dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/artwork"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Get the best coffee in town!"
            android:textColor="#8C746A"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnregister"
                android:layout_width="171dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                app:srcCompat="@drawable/register"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btnlogin"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/login"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvLoginFacebook"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="15dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                style="@style/loginFacebook"
                android:layout_width="match_parent"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textSize="18sp"
                tools:ignore="MissingClass"/>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>